-#  This file is app/views/movies/index.html.haml
-#:id=>"ratings_#{rating}"
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating + " " + (@def_ratings[rating] ? true : false).to_s
    = check_box_tag "ratings[#{rating}]", 1, (@def_ratings[rating] ? true : false)
  = submit_tag 'Refresh' , :id=>"ratings_submit"

%table#movies
  %thead
    %tr
      %th= link_to 'Title', movies_path( {:order=>"name"} ), :class=>"hilite", :id=>"title_header"
      %th Rating
      %th= link_to 'Release Date', movies_path( {:order=>"date"} ), :class=>"hilite", :id=>'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
